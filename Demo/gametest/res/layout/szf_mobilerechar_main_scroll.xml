<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <RelativeLayout
        android:id="@+id/relative_one"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/gamename_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="16dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="游戏名称 : "
                android:textColor="#000000"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/gamename_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transaction_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gamename_id"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="交易号 : "
                android:textColor="#000000"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/transaction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rechargemoney_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/transaction_id"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="充值金额 : "
                android:textColor="#000000"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/rechargemoney_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/szf_red"
                android:textSize="15dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="元"
                android:textColor="#000000"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gameaccount_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rechargemoney_id"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="5dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="充值账号 : "
                android:textColor="#000000"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/gameaccount_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="15dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/facilitator_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameaccount_id"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="5dip" >

            <TextView
                android:id="@+id/facilitator_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:text="充值服务商 : "
                android:textColor="#000000"
                android:textSize="18dip" />

            <TextView
                android:id="@+id/facilitator_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="神州付"
                android:textColor="#000000"
                android:textSize="15dip" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/plrechargemoney_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_one"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="16dip"
        android:background="@drawable/szf_text_center" >

        <EditText
            android:id="@+id/plrechargemoney_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:background="@null"
            android:focusable="false"
            android:hint="请输入充值金额                                       "
            android:imeOptions="actionDone"
            android:inputType="numberDecimal"
            android:maxLength="6"
            android:singleLine="true"
            android:textSize="18dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_mobile_re"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plrechargemoney_title"
        android:gravity="center"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/selectoperator_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plrechargemoney_title"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="16dip" >

            <RelativeLayout
                android:id="@+id/selectoperator_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/szf_text_top_xml" >

                <EditText
                    android:id="@+id/selectoperator_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:layout_marginLeft="10dp"
                    android:enabled="false"
                    android:hint="请选择运营商 "
                    android:imeOptions="actionNext"
                    android:textColor="@color/szf_black"
                    android:textSize="18dip" />

                <RelativeLayout
                    android:id="@+id/selectoperator_mn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dip" >

                    <ImageView
                        android:id="@+id/selectoperator_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/szf_trangle" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/selectrechargemoney_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectoperator_layout"
                android:background="@drawable/szf_text_center_center_xml" >

                <EditText
                    android:id="@+id/selectrechargemoney_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:enabled="false"
                    android:background="@null"
                    android:hint="请选择充值卡面额 "
                    android:imeOptions="actionNext"
                    android:textColor="@color/szf_black"
                    android:textSize="18dip" />

                <RelativeLayout 
                    android:id="@+id/selectrechargemoney_mn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dip" >

                    <ImageView
                        android:id="@+id/selectrechargemoney_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/szf_trangle" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rechargecardnumber_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/selectrechargemoney_title"
                android:background="@drawable/szf_text_center_center_xml" >

                <EditText
                    android:id="@+id/rechargecardnumber_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入充值卡序列号"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="19"
                    android:numeric="integer"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="18dip" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rechargecardpassw_id"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rechargecardnumber_title"
                android:background="@drawable/szf_text_down_xml">

                <EditText
                    android:id="@+id/rechargecardpassw_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="请输入充值卡密码"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="21"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="18dip" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_aaa"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/login_mobile_re"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="fill_parent"
            android:layout_height="50dip" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/text1" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/text2" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/text3" />
    </RelativeLayout>

</RelativeLayout>