<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/mini_text_white" />
            <corners
                android:bottomLeftRadius="@dimen/mini_margin_6"
                android:bottomRightRadius="@dimen/mini_margin_6" />
            <stroke
                android:width="2dp"
                android:color="@color/mini_list_bg_color" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1px">
        <shape android:shape="rectangle" >
            <corners
                android:bottomLeftRadius="@dimen/mini_margin_6"
                android:bottomRightRadius="@dimen/mini_margin_6" />
            <solid android:color="@color/mini_text_white" />
        </shape>
    </item>

</layer-list>