<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mini_ui_setting_my_card"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mini_page_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/mini_ui_setting_title" />

    <com.alipay.android.mini.uielement.UITableView
        android:id="@+id/user_info"
        android:layout_width="fill_parent"
        android:layout_height="83dp"
        android:layout_marginLeft="@dimen/mini_margin_13"
        android:layout_marginRight="@dimen/mini_margin_13"
        android:layout_marginTop="@dimen/mini_margin_13"
        app:tableType="normal" />

    <TextView
        android:id="@+id/default_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mini_add_card_margin_left"
        android:layout_marginTop="@dimen/mini_margin_textview_13"
        android:layout_marginBottom="@dimen/mini_margin_textview_6"
        android:text="@string/mini_setting_default_tips"
        android:textColor="@color/mini_color_light_gray"
        android:textSize="@dimen/mini_text_size_large"
        android:visibility="gone" />

    <Button
        android:id="@+id/mini_page_add_confirm"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/mini_margin_13"
        android:layout_marginRight="@dimen/mini_margin_13"
        android:layout_marginTop="@dimen/mini_margin_13"
        android:layout_gravity="center"
        android:background="@drawable/mini_btn_confirm_bg_selector"
        android:text="@string/mini_page_add_title"
        android:textColor="@drawable/mini_btn_confirm_text_color_selector"
        android:textSize="@dimen/mini_text_size_xx_large"
        android:visibility="gone" />

    <com.alipay.android.mini.uielement.UITableView
        android:id="@+id/default_bankcard_only"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mini_margin_13"
        android:layout_marginLeft="@dimen/mini_margin_13"
        android:layout_marginRight="@dimen/mini_margin_13"
        app:tableType="normal"
        android:visibility="gone" />
    
    <com.alipay.android.mini.uielement.UITableView
        android:id="@+id/default_bankcard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mini_margin_13"
        android:layout_marginRight="@dimen/mini_margin_13"
        app:tableType="normal"
        android:visibility="gone" />

    <TextView
        android:id="@+id/view_all_bankcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/mini_margin_right"
        android:layout_marginTop="@dimen/mini_margin_textview_13"
        android:clickable="true"
        android:text="@string/mini_setting_view_all_bankcard"
        android:textColor="@color/mini_text_link"
        android:textSize="@dimen/mini_text_size_small"
        android:visibility="gone" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom" >

        <TextView
            android:id="@+id/mini_insurance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/mini_margin_13"
            android:textSize="@dimen/mini_text_size_small"
            android:textColor="@color/mini_color_light_gray" />
    </LinearLayout>

</LinearLayout>