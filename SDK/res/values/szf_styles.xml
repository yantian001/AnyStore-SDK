<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.


    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.


        -->
    </style>

    <style name="szf_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 标题 -->
        <item name="android:windowBackground">@+color/szf_full_alpha</item>
    </style>

    <style name="dialog_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ffff6600</item>
    </style>

    <style name="navigation_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">20dip</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- <item name="android:windowFullscreen">true</item> -->
    </style>

    <style name="dialog_title">
        <item name="android:textSize">23.0sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">center_horizontal</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="dialog_name">
        <item name="android:textSize">20.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>


    <style name="styleTextShadow">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">20dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="passworddialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景颜色不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 标题 -->
        <item name="android:windowBackground">@+color/szf_full_alpha</item>
    </style>

    <style name="dialog_little" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 标题 -->
        <item name="android:windowBackground">@+color/szf_full_alpha</item>
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 屏幕背景不变暗 -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

</resources>